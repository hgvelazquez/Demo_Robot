<?xml version="1.0" ?>
<!--
  This is not a standalone urdf for kobuki. It simply defines the 'kobuki' tag that can
  be incorporated by other urdf files (e.g. turtlebot).

  See kobuki_standalone.urdf.xacro for a standalone urdf to be tested with
      kobuki_description/launch/view_model.launch
 -->
<robot name="kobuki" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Incluimos archivos necesarios como propiedades de materiales
  que se utilizarán para los links y demás partes del robot, propiedades
  utiles para visualizar en gazebo y descripción del brazo robot. -->
  <xacro:include filename="$(find hola_tortuga)/urdf/common_properties.urdf.xacro"/>
  <xacro:include filename="$(find hola_tortuga)/urdf/kobuki_gazebo.urdf.xacro"/>
  <xacro:include filename="$(find hola_tortuga)/urdf/kobuki_arm.urdf.xacro"/>


  <!-- Kobuki 
    Notece que en esta parte se toman los parametros para posición inicial
    prefijo tf y si el brazo es necesario.
  -->
  <xacro:macro name="kobuki" params="x y tf_prefix with_arm">

    <!-- Iniciamos todo robot en un mismo link llamado start -->
    <link name="start"/>

    <joint name="start_odom_joint" type="fixed">
      <origin xyz="$(arg x) $(arg y) 0" rpy="0 0 0" />
      <parent link="start"/>
      <child link="$(arg tf_prefix)/odom" />
    </joint>

    <!-- A partir de aquí todos los links tendrán como 
    prefijo el valor tf_frefix recibido como parametro.-->
    <link name="$(arg tf_prefix)/odom"/>
  
    <joint name="odom_base_footprint_joint" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <parent link="$(arg tf_prefix)/odom"/>
      <child link="$(arg tf_prefix)/base_footprint" />
    </joint>

    <link name="$(arg tf_prefix)/base_footprint"/>
    <!--
       Base link is set at the bottom of the base mould.
       This is done to be compatible with the way base link
       was configured for turtlebot 1. Refer to

       https://github.com/turtlebot/turtlebot/issues/40

       To put the base link at the more oft used wheel
       axis, set the z-distance from the base_footprint
       to 0.352.
      -->
    <joint name="base_joint" type="fixed">
      <origin xyz="0 0 0.0102" rpy="0 0 0" />
      <parent link="$(arg tf_prefix)/base_footprint"/>
      <child link="$(arg tf_prefix)/base_link" />
    </joint>

    <link name="$(arg tf_prefix)/base_link">
      <visual>
        <geometry>
          <!-- new mesh -->
          <mesh filename="package://kobuki_description/meshes/main_body.dae" />
        </geometry>
        <origin xyz="0.001 0 0.05199" rpy="0 0 0"/>
      </visual>
      <collision name="base">
        <geometry>
          <cylinder length="0.10938" radius="0.178"/>
        </geometry>
        <origin xyz="0.0 0 0.05949" rpy="0 0 0"/>
      </collision>
      <inertial>
        <!-- COM experimentally determined -->
        <origin xyz="0.01 0 0"/>
        <mass value="2.4"/> <!-- 2.4/2.6 kg for small/big battery pack -->
        <!-- Kobuki's inertia tensor is approximated by a cylinder with homogeneous mass distribution
             More details: http://en.wikipedia.org/wiki/List_of_moment_of_inertia_tensors
             m = 2.4 kg; h = 0.09 m; r = 0.175 m
             ixx = 1/12 * m * (3 * r^2 + h^2)
             iyy = 1/12 * m * (3 * r^2 + h^2)
             izz = 1/2 * m * r^2
          -->
        <inertia ixx="0.019995" ixy="0.0" ixz="0.0"
                 iyy="0.019995" iyz="0.0"
                 izz="0.03675" />
      </inertial>
    </link>

    <joint name="wheel_left_joint" type="continuous">
      <parent link="$(arg tf_prefix)/base_link"/>
      <child link="$(arg tf_prefix)/wheel_left_link"/>
      <origin xyz="0.00 ${0.23/2} 0.0250" rpy="${-M_PI/2} 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>
    <link name="$(arg tf_prefix)/wheel_left_link">
      <visual>
        <geometry>
          <mesh filename="package://kobuki_description/meshes/wheel.dae"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="0.0206" radius="0.0352"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.01" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                 iyy="0.001" iyz="0.0"
                 izz="0.001" />
      </inertial>
    </link>

    <joint name="wheel_right_joint" type="continuous">
      <parent link="$(arg tf_prefix)/base_link"/>
      <child link="$(arg tf_prefix)/wheel_right_link"/>
      <origin xyz="0.00 -${0.23/2} 0.0250" rpy="${-M_PI/2} 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>
    <link name="$(arg tf_prefix)/wheel_right_link">
      <visual>
        <geometry>
          <mesh filename="package://kobuki_description/meshes/wheel.dae"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="0.0206" radius="0.0350"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.01" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                 iyy="0.001" iyz="0.0"
                 izz="0.001" />
      </inertial>
    </link>

    <joint name="caster_front_joint" type="fixed">
      <parent link="$(arg tf_prefix)/base_link"/>
      <child link="$(arg tf_prefix)/caster_front_link"/>
      <origin xyz="0.115 0.0 0.007" rpy="${-M_PI/2} 0 0"/>
    </joint>
    <link name="$(arg tf_prefix)/caster_front_link">
      <collision>
        <geometry>
          <cylinder length="0.0176" radius="0.017"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.01" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                 iyy="0.001" iyz="0.0"
                 izz="0.001" />
      </inertial>
    </link>

    <joint name="caster_back_joint" type="fixed">
      <parent link="$(arg tf_prefix)/base_link"/>
      <child link="$(arg tf_prefix)/caster_back_link"/>
      <origin xyz="-0.135 0.0 0.009" rpy="${-M_PI/2} 0 0"/>
    </joint>
    <link name="$(arg tf_prefix)/caster_back_link">
      <collision>
        <geometry>
          <cylinder length="0.0176" radius="0.017"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.01" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                 iyy="0.001" iyz="0.0"
                 izz="0.001" />
      </inertial>
    </link>

    <!-- Kobuki arm 
    Si el valor with_arm es yes se incorpora la información del brazo
    en el modelo del robot.-->
    <xacro:if value="${with_arm == 'yes'}">
      <xacro:kobuki_arm tf_prefix="$(arg tf_prefix)" parent="base_link"/>
    </xacro:if>
    
    <!---->

    <!-- Kobuki sensors -->
    <joint name="gyro_joint" type="fixed">
      <axis xyz="0 1 0"/>
      <origin xyz="0.056 0.062 0.0202" rpy="0 0 0"/>
      <parent link="$(arg tf_prefix)/base_link"/>
      <child link="$(arg tf_prefix)/gyro_link"/>
    </joint>
    <link name="$(arg tf_prefix)/gyro_link">
      <inertial>
        <mass value="0.001"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.0001" ixy="0" ixz="0"
                 iyy="0.000001" iyz="0"
                 izz="0.0001"/>
      </inertial>
    </link>

    <joint name="cliff_sensor_left_joint" type="fixed">
      <origin xyz="0.08734 0.13601 0.0214" rpy="0 ${M_PI/2} 0" />
      <parent link="$(arg tf_prefix)/base_link"/>
      <child link="$(arg tf_prefix)/cliff_sensor_left_link" />
    </joint>
    <link name="$(arg tf_prefix)/cliff_sensor_left_link">
      <inertial>
        <mass value="0.0001" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                 iyy="0.0001" iyz="0.0"
                 izz="0.0001" />
      </inertial>
    </link>

    <joint name="cliff_sensor_right_joint" type="fixed">
      <origin xyz="0.085 -0.13601 0.0214" rpy="0 ${M_PI/2} 0" />
      <parent link="$(arg tf_prefix)/base_link"/>
      <child link="$(arg tf_prefix)/cliff_sensor_right_link" />
    </joint>
    <link name="$(arg tf_prefix)/cliff_sensor_right_link">
      <inertial>
        <mass value="0.0001" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                 iyy="0.0001" iyz="0.0"
                 izz="0.0001" />
      </inertial>
    </link>

    <joint name="cliff_sensor_front_joint" type="fixed">
      <origin xyz="0.156 0.00 0.0214" rpy="0 ${M_PI/2} 0" />
      <parent link="$(arg tf_prefix)/base_link"/>
      <child link="$(arg tf_prefix)/cliff_sensor_front_link" />
    </joint>
    <link name="$(arg tf_prefix)/cliff_sensor_front_link">
      <inertial>
        <mass value="0.0001" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                 iyy="0.0001" iyz="0.0"
                 izz="0.0001" />
      </inertial>
    </link>

    <!-- Kobuki Gazebo simulation details -->
    <xacro:kobuki_sim tf_prefix="$(arg tf_prefix)"/>

  </xacro:macro>
</robot>
